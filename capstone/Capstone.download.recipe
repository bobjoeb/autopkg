<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads the latest version of Pasco Capstone from pasco.com.</string>
    <key>Identifier</key>
    <string>com.github.bobjoeb.autopkg.capstone.Capstone.download</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>Capstone/string>
        <key>SEARCH_URL</key>
        <string>http://www.pasco.com/support/downloads/pasco-capstone-update.cfm</string>
        <key>SEARCH_PATTERN</key>
        <string>(?P&lt;url&gt;http://www.pasco.com/file_downloads/pasco_capstone/.*?/PASCO_Capstone_MacSetup.dmg)</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.4</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>URLTextSearcher</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%SEARCH_URL%</string>
                <key>re_pattern</key>
                <string>%SEARCH_PATTERN%</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>filename</key>
                <string>%NAME%.dmg</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>EndOfCheckPhase</string>
        </dict>
    </array>
</dict>
</plist>
